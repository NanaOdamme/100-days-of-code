<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>courses</title>
   
    <link rel="stylesheet" href="/styles.css">

</head>
<body>
    
    <section class="courses">
    <div class="container-md mt-5">
        <h1 class="mt-4 mb-4">Add courses:</h1>
        <ul class="list-group">
            <% tasks.forEach(task => { %>
                <li class="list-group-item">
                    <%= task.name %>
                    <div class="btn-group " role="group" aria-label="Task Actions">
                        <a href="/edit-task/<%= task.id %>" class="btn btn-sm btn-primary">Edit</a>
                        <a href="/delete-task/<%= task.id %>" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </li>
                
            <% }) %>
        </ul>
        <form action="/add-task" method="POST" class="mt-4">
            <div class="form-group">
                <input type="text" name="taskName" class="form-control" placeholder="Enter course name" required>
            </div>
            <button type="submit" class="btn btn-success mt-5">Add Course</button>
        </form>
    </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>
